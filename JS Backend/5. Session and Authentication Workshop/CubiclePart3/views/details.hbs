{{#with cube}}
<h1>{{name}}</h1>
<img class="cube" src="{{imageUrl}}">
<div class="details">
  <p><span>Description:</span> {{description}}</p>
  <p><span>Difficulty level:</span> {{difficulty}}</p>
  <a class="btn" href="/products">Back</a>
  <a class="btn" href="/products/details/{{id}}/attach">Attach stickers</a>
  <a class="btn" href="/products/edit/{{id}}">Edit cube</a>
</div>
<h2>Accessories</h2>
<div class="accessories">
  {{#each accessories}}
  {{> accessory}}
  {{else}}
  <h3 class="italic">This cube has no accessories yet...</h3>
  {{/each}}
</div>
<div class="details">
  <form action="/comments/{{id}}/create" method="POST">
    <span>Your name: </span><input type="text" name="author">
    <span>Comment:</span>
    <textarea name="comment"></textarea>
    <input type="submit" value="Post comment">
  </form>
  {{#each comments}}
  {{> comment}}
  {{else}}
  <span style="font-style: italic">No comments yet. Be the first!</span>
  {{/each}}
</div>
{{/with}}